<div class="form-group float-left">
  <label class="text-info">
    {{@label}}
  </label>
  <select onchange={{action (mut @value) value="target.value"}}>
    {{#each @items as |item|}}
      <option value={{item.value}} selected={{item.selected}}>
        {{item.value}}
      </option>
    {{/each}}
  </select>
</div>